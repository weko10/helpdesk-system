<%- include("../inc/head.ejs") %>
<link rel="stylesheet" href="/css/nav.css" />
<link rel="stylesheet" href="/css/dashboard.css">
<link rel="stylesheet" href="/css/support-ticket-chat.css" />
</head>
<body>
    <main>
        <%- include("../inc/nav.ejs") %>
        <div class="box ticket_chat">
            <h1>Subject: <%= ticket.subject %></h1>
            <div class="ticket_info">
                <h5>Created at: </h5>
                <h5 class="date"><%= ticket.created_at %></h5>
                <h5>By: <%= username %></h5>
                <h5>Status: <%= ticket.status %></h5>
                <h5>Current agent: [agent name if exists]</h5>
            </div>
            <hr />
            <div class="reply">
                <div class="reply_info">
                    <h5>[Timestamp]</h5>
                    <h5>[Sender name]</h5>
                    <h5>[reciepient name]</h5>
                </div>
                <div class="reply_message">
                    <p>[Some message here is written from the intial message]</p>
                </div>
            </div>
            <hr />
            <div class="textarea">
                <label for="relpy">Write a reply</label>
                <textarea name="reply" id="reply" cols="60" rows="10"></textarea>
            </div>
        </div>
    </main>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js" integrity="sha512-qTXRIMyZIFb8iQcfjXWCO8+M5Tbc38Qi5WzdPOYZHIlZpzBHG3L3by84BBBOiRGiEb7KKtAOAs5qYdUiZiQNNQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/js/ticket-chat.js"></script>
<%- include("../inc/end.ejs") %>
