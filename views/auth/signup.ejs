<%- include("../inc/head.ejs") %>
<link rel="stylesheet" href="/css/nav.css" />
<link rel="stylesheet" href="/css/signup-login.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
</head>
<body>
    <%- include("../inc/nav.ejs") %>
    <main>
        <%- include("../inc/flash.ejs") %>

        <h1>Sign Up with your Email:</h1>
        <form class="box" action="/auth/signup" method="post" novalidate>
            <input
                class="required"
                id="username"
                type="text"
                name="username"
                placeholder="*Username"
                required
            />
            <input
                class="required"
                id="email"
                type="email"
                name="email"
                placeholder="*Email"
                required
            />
            <div id="div-password">
                <input
                    class="required"
                    id="password"
                    type="password"
                    name="password"
                    placeholder="*Password"
                    pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,45}"
                    title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                />
                <i class="bi bi-eye-slash" id="togglePassword"></i>
            </div>
            <input
            id="phone"
            type="tel"
            name="phone"
            pattern="[0-9]{11}"
            placeholder="Phone Number"
            title="Must be a valid phone number"
            />
            <input id="address" type="text" name="home_address" placeholder="Street Address"/>
            <input type="submit" value="Sign Up">
        </form>
        <p>Already have an account? <a href="/auth/login">Login Here!</a></p>
    </main>
    <script src="/js/password.js"></script>
<%- include("../inc/end.ejs") %>