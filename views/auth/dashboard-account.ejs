<%- include("../inc/head.ejs") %>
<link rel="stylesheet" href="/css/nav.css" />
<link rel="stylesheet" href="/css/dashboard.css">
<link rel="stylesheet" href="/css/dashboard-account-info.css" />
<link rel="stylesheet" href="/css/side-nav.css" />
</head>
<body>
    <%- include("../inc/nav.ejs") %>
    <main>
        <%- include("../inc/flash.ejs") %>

        <%- include("../inc/side-nav.ejs") %>
        <div class="dashboard_box account_info">
            <header>
                <h1>Account Info:</h1>
            </header>
            <main>
                <ul>
                    <li>Username:</li>
                    <li><%= userData.username %></li>
                </ul>
                <ul>
                    <li>Email:</li>
                    <li><%= userData.email %></li>
                </ul>
                <ul>
                    <li>Phone Number:</li>
                    <li><%= userData.phone || "N/A"%></li>
                </ul>
                <ul>
                    <li>Home Address:</li>
                    <li><%= userData.homeAddress || "N/A"%></li>
                </ul>
                <form action="/auth/logout" method="post">
                    <input type="submit" value="Logout">
                </form>
            </main>
        </div>
    </main>
<%- include("../inc/end.ejs") %>
